{% extends "layout.jinja2" %}

{% block body %}
    <div ng-controller="newScript">
        <h2>Submit script</h2>
        <form action="/" method="post">
            <div class="form-group">
                <label for="email">Task name:</label>
                <input type="text" class="form-control" id="text" placeholder="Enter name" name="name">
            </div>
            <div class="form-group">
                <label for="pwd">Script:</label>
                <code class="form-control" id="editor">
                    {{ script_template }}
                </code>
                <textarea name="script" name="script" ng-bind="script" style="display: none"></textarea>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Name</th>
            <th>Script</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>

        <hr>

        <h2>Running scripts</h2>

        {% for item in tasks %}
            <tr>
                <td>{{ item.name }}</td>
                <td>
                    <code>
                        {{ item.script }}
                    </code>
                </td>
                <td>
                    <a class="btn btn-danger" href="/delete/{{ item.id }}">Delete</a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}